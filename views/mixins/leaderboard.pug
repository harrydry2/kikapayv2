mixin leaderboard()
  .leaderboard
    .leaderboard__title
      span 💎
      .leaderboard__title-center All time Leaderboard
      span 💎
    .leaderboard__user-sb
      each user, index in users
        - var medal = ""
        if (index === 0)
          - var medal = "🥇"
        if (index === 1)
          - var medal = "🥈"
        if (index === 2)
          - var medal = "🥉"
        a(href=`https://www.twitter.com/${user.username}` target="_blank").leaderboard__user
          .leaderboard__user-left
            img.leaderboard__user-img(src=`${user.profileImg}` alt="")
            .leaderboard__user-details
              .leaderboard__user-details-h1 #{user.name}
              .leaderboard__user-details-h2 @#{user.username}
            .leaderboard__user-medal=medal
          .leaderboard__user-pill
            span 🔥
            .leaderboard__user-pill-votes=user.upvotes